                            <ViewCell>

                                <StackLayout  Padding="10,5,10,5" 
                   Orientation="Horizontal"
                   BackgroundColor="White"
                  >

                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer 
